<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap CSS  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Todo List</title>

    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="container-md conatiner-fluid border border-primary" id="addtask">
        <div class="w-100 text-center"><h2>Todo App</h2></div>
        <% if(messages.length == 0){ %> 
            <!-- <div class="alert alert-secondary" role="alert">Change your task.</div> -->
        <% }else if (messages[0].fail){ %>
            <div class="alert alert-danger" role="alert"><%= messages[0].message %></div>
        <% } else { %>
            <div class="alert alert-success" role="alert"><%= messages[0].message %></div>
        <% } %>
        <form method="POST" action="/" class="m-4">
            <div class="form-group">
            <label for="task">Add Task</label>
            <input class="form-control" type="text" name="task" placeholder="Add Task">
            <button class="btn btn-success mt-3" type="submit">Add</button>
        </form>


        <div class="mt-4 w-100">
            <ol class="list-group w-100">
                <% todo.forEach(function(td){ %>
                <li>
                <%= td.task %>
                <span class="float-right">
                    <a class="btn" href='/edit/<%=td._id%>'><i class="fa fa-pencil"></i></a>
                    <a class="btn text-danger" href="/delete/<%=td._id%>"><i class="fa fa-trash"></i></a>
                </span>
                </li>
                <% }) %>
            </ol>
        </div>
    </div>

    <!-- js for Bootstrap choosing option 2 -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

</body>
</html>